<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context="deva.studentdatabase.Update_Activity">

    <TextView
        android:id="@+id/textViewU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Roll to Search : "
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <TextView
        android:id="@+id/textView2U"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter New Name : "
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="33dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textViewU"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView3U"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter New Marks : "
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="50dp"
        android:layout_below="@+id/textView2U"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/editNameUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2U"
        android:layout_alignBottom="@+id/textView2U"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="-12dp" />

    <EditText
        android:id="@+id/editRollUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewU"
        android:layout_alignBottom="@+id/textViewU"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/editMarksUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        android:layout_alignBaseline="@+id/textView3U"
        android:layout_alignBottom="@+id/textView3U"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:layout_below="@+id/editMarksUpdate"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
